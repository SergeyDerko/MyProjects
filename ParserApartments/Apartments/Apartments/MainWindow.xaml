        <Button x:Name="Sort" Content="Отсортировать" HorizontalAlignment="Left" Margin="162,10,0,0" VerticalAlignment="Top" Width="92" Click="Sort_Click"/>
        <Button x:Name="Save" Content="Сохранить" HorizontalAlignment="Left" Margin="432,10,0,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>

    </Grid>
</Window>
