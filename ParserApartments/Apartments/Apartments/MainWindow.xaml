        xmlns:local="clr-namespace:Apartments"
        mc:Ignorable="d"
        Title="Apartments" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="Box" Margin="0,45,0,10" TextWrapping="Wrap" Text=""/>
